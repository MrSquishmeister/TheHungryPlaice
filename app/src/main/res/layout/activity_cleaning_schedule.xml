<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CleaningSchedule">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:text="Back" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="33dp"
            android:text="Cleaning Schedule"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp" />

        <Button
            android:id="@+id/postEventCleaningButton"
            android:backgroundTint="#FFC000"
            android:textColor="#000000"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/periodicalCleaningButton"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:text="Post Event Cleaning" />

        <Button
            android:id="@+id/periodicalCleaningButton"
            android:backgroundTint="#FFC000"
            android:textColor="#000000"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="400dp"
            android:layout_centerHorizontal="true"
            android:text="Periodical Cleaning"/>

    </RelativeLayout>
</layout>