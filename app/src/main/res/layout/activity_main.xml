<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="102dp"
        android:layout_centerHorizontal="true"
        android:text="Menu"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="60sp" />

    <Button
        android:id="@+id/temperatureCheckButton"
        android:layout_width="272dp"
        android:layout_height="73dp"
        android:layout_above="@+id/everydaySheetButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFC000"
        android:text="Check temperatures"
        android:textColor="#000000" />

    <Button
        android:id="@+id/everydaySheetButton"
        android:layout_width="272dp"
        android:layout_height="73dp"
        android:layout_above="@+id/cleaningScheduleButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFC000"
        android:text="Everyday Sheet"
        android:textColor="#000000" />

    <Button
        android:id="@+id/cleaningScheduleButton"
        android:layout_width="272dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="250dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFC000"
        android:text="Cleaning Schedule"
        android:textColor="#000000" />


</RelativeLayout>
</layout>