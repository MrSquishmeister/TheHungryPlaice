<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureChecks">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="31dp"
        android:text="Temp Checks"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp" />

    <Button
        android:id="@+id/fridge1Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fridge2Button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Fridge 1" />

    <Button
        android:id="@+id/fridge2Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/freezer1Button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Fridge 2" />

    <Button
        android:id="@+id/freezer1Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/freezer2Button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Freezer 1" />

    <Button
        android:id="@+id/freezer2Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/freezer3Button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Freezer 2" />

    <Button
        android:id="@+id/freezer3Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/freezer4Button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Freezer 3" />

    <Button
        android:id="@+id/freezer4Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/freezer5Button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Freezer 4" />

    <Button
        android:id="@+id/freezer5Button"
        android:backgroundTint="#FFC000"
        android:textColor="#000000"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:text="Freezer 5"/>

</RelativeLayout>
</layout>